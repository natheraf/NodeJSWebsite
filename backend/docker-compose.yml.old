version: '3.7'
services:
  server:
    restart: always
    build:
      context: ./
      dockerfile: Dockerfile
    image: nodejs
    container_name: node-js-website
    command: node ./src/index.js
    volumes:
      - ./server/:/usr/src/app
      - /usr/src/app/node_modules
    ports:
      - "4001:8080"
    depends_on:
      - mongo
    env_file: ./.env
    networks:
      - app-network
  mongo:
    restart: always
    image: mongo
    volumes:
      - data-volume:/data/db
    ports:
      - "27017:27017"
    networks:
      - app-network
  client:
    restart: always
    build:
      context: ./
      dockerfile: Dockerfile
    image: myapp-client
    container_name: myapp-react-client
    command: npm start
    volumes:
      - ./client/:/usr/app
      - /usr/app/node_modules
    depends_on:
      - server
    ports:
      - "3000:3000"
    networks:
      - app-network
networks:
    app-network:
        driver: bridge
volumes:
    data-volume:
    node_modules:
    web-root:
      driver: local